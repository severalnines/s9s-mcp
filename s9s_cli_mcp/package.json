{
  "name": "s9s-cli-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "Model Context Protocol (MCP) server that wraps the Severalnines ClusterControl s9s CLI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "selftest": "node --loader ts-node/esm scripts/selftest.ts"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "s9s",
    "clustercontrol",
    "severalnines"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "dotenv": "^16.4.5",
    "execa": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
